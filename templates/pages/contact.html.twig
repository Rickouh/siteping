{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block stylesheets %}
    <link href="{{ 'css/bootstrap.css' }}" rel="stylesheet" />
    <link href="{{ 'css/style.css' }}" rel="stylesheet" />
{% endblock %}
{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <h2>Contactez nous !</h2>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_errors(form.firstName) }}
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName, { 'attr' : { 'class' : 'form-control', 'placeholder' : form.firstName.vars.label } }) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.lastName) }}
                    {{ form_label(form.lastName) }}
                    {{ form_widget(form.lastName, { 'attr' : { 'class' : 'form-control', 'placeholder' : form.lastName.vars.label } }) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.email) }}
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control', 'placeholder' : form.email.vars.label } }) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.message) }}
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message, { 'attr' : { 'class' : 'form-control', 'placeholder' : form.message.vars.label } }) }}
                </div>

                {{ form_rest(form) }}

                {{ form_widget(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}